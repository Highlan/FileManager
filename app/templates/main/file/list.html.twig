{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://getbootstrap.com/docs/4.0/examples/offcanvas/offcanvas.css">
    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <style>
        body{
            padding-top: 0px;
        }
    </style>
{% endblock %}
{% block body %}

    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">{{ app.user.username | upper}}</h6>
                <small>
                    <a href="{{ path('logout') }}" title="Logout">Logout </a>
                </small>
            </div>
        </div>

        {% include('main/file/messages.html.twig') %}

        {% include('main/file/list_files.html.twig') %}

        <small class="d-block text-right mt-3">
            <a href="{{ path('new_file') }}"> Add new file </a>
        </small>

    </main>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('asset/js/https _cdnjs.cloudflare.com_ajax_libs_x-editable_1.5.0_bootstrap3-editable_js_bootstrap-editable.min.js') }}"></script>
    <script>
        $.fn.editable.defaults.mode = 'inline';
        $(document).ready(function() {
            $('.file-origin-name').editable();

        });
    </script>
{% endblock %}
