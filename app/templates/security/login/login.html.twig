{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {% include('security/login/_style.html.twig') %}
{% endblock %}
{% block body %}

    {{ form_start(user_form, {'attr': {'class': 'form-signin'}}) }}

    <div class="text-center mb-4">
        <img class="mb-4" src="{{ asset('asset/images/real-digital_logo.svg') }}" alt="" width="250">
        <h1 class="h3 mb-3 font-weight-normal">Welcome to File Manager Panel</h1>
        <p>Please inter your Username and Password</p>
    </div>

    <div class="form-label-group">
        {{
        form_row(user_form.username,
            {
                'attr':
                {
                    'class': 'form-control',
                    'maxlength': 8,
                    'placeholder': 'Username'
                },
                'value':  last_username
            })
        }}
    </div>

    <div class="form-label-group">
        {{ form_row(user_form.password, {'attr': {'class': 'form-control', 'maxlength': 8, 'placeholder': 'Password'}}) }}
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>

    <p class="mt-5 mb-3 text-muted text-center">Â© July, 2020</p>

    {{ form_end(user_form) }}

{% endblock %}